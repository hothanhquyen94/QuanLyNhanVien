<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#b3b389">


    <TextView
        android:id="@+id/viewPhongBan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="51dp"
        android:layout_marginStart="51dp"
        android:layout_marginTop="40dp"
        android:textColor="#2523c2"
        android:textSize="20sp"
        android:text="Tên Phòng Ban" />

    <TextView
        android:id="@+id/maPhongBan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/viewPhongBan"
        android:layout_alignStart="@+id/viewPhongBan"
        android:layout_below="@+id/viewPhongBan"
        android:padding="5dp"
        android:textSize="15sp"
        android:layout_marginTop="27dp"
        android:text="Mã phòng ban" />

    <TextView
        android:id="@+id/SoNhanVien"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:text="Số Nhân viên"
        android:padding="5dp"
        android:textSize="15sp"
        android:layout_below="@+id/maPhongBan"
        android:layout_alignLeft="@+id/maPhongBan"
        android:layout_alignStart="@+id/maPhongBan" />

</RelativeLayout>